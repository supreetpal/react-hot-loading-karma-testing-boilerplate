{
  "name": "react-hot-loading-karma-testing-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for react components with hot loader for development and karma for testing.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && ./node_modules/.bin/webpack --config webpack.config.prod.js",
    "clean": "rimraf build",
    "lint": "./node_modules/.bin/eslint ./src/",
    "start": "node server.js",
    "test": "./node_modules/karma/bin/karma start --single-run --no-auto-watch karma.config.js",
    "test_watch": "./node_modules/karma/bin/karma start --auto-watch --no-single-run karma.config.js",
    "wipe": "rimraf build && rimraf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supreetpal/react-hot-loading-karma-testing-boilerplate"
  },
  "keywords": [
    "react",
    "es6",
    "babel",
    "webpack",
    "karma"
  ],
  "author": "Supreet Pal Singh (http://supreetpal.in)",
  "license": "MIT",
  "homepage": "https://github.com/supreetpal/react-hot-loading-karma-testing-boilerplate",
  "dependencies": {
    "babel-runtime": "^5.1.10",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel-core": "^5.4.5",
    "babel-eslint": "^3.1.6",
    "babel-loader": "^5.0.0",
    "eslint": "^0.21.2",
    "eslint-plugin-react": "^2.3.0",
    "expect": "^1.6.0",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.3",
    "karma-coverage": "^0.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-safari-launcher": "^0.1.1",
    "karma-spec-reporter": "0.0.20",
    "karma-webpack": "^1.7.0",
    "phantomjs": "^1.9.17",
    "phantomjs-polyfill": "0.0.1",
    "react-hot-loader": "^1.1.5",
    "rimraf": "^2.4.3",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.8.0"
  }
}
